<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Express Todos</title>
</head>
<body>
    <h1>Dev Skills as of: <%= time %></h1>
    <% if(error) { %>
      <h2><%= error %></h2>
    <% } %>
    <ul>
        <% devskills.forEach(function(devskill) { %>
          <li>
            <form 
            action="/devskills/<%= devskill._id %>?_method=DELETE"
            class="delete-form"
            method="POST"
          >
            <button type="submit">X</button>
          </form>
            <a href="/devskills/<%= devskill._id %>"><%= devskill.text %></a>
              - 
            <%= devskill.done ? 'done' : 'not done' %>
          </li>
        <% }) %>
      </ul>
      <a href="/devskills/new">Add To Do</a>
  </body>
</html>